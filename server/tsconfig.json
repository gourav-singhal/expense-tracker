{
  "extends": "./tsconfig.checks.json",
  "compilerOptions": {
    "allowJs": true,
    "module": "ES2020",
    "target": "ES2021",
    "lib": [
      "ES2021"
    ],
    "rootDir": "./src",
    "outDir": "./build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "__tests__/**",
    "**/*.test.ts",
    "**/*.mock.ts",
    "**/*.spec.ts"
  ]
}
